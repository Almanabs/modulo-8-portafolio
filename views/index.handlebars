<div class="container mt-5">
    <div class="row">
        {{> crear-publicacion}}
    </div>
</div>
<div class="container mt-5">
  <div class="row" id="gallery">
    {{#each publicaciones}}
      <div class="col-md-4 mb-4">
        <div class="card vertical-card mb-3">
          <div class="row no-gutters">
            <div class="col-md-4">
              <a href="{{imagen_url}}" class="gallery-item" data-src="{{imagen_url}}" data-sub-html="{{titulo}}">
                <img src="{{imagen_url}}" class="card-img-top img-fluid" alt="...">
              </a>
            </div>
            <div class="col-md-8">
              <div class="card-body d-flex flex-column h-100">
                
                <div class="d-flex justify-content-center">
                  <div class="d-flex flex-column">
                    <button class="btn btn-primary me-gusta" data-id="{{id}}">Me gusta</button>
                    <span class="me-gusta-counter">({{megusta}})</span>
                  </div>
                  <div class="d-flex flex-column">
                    <button class="btn btn-danger no-me-gusta" data-id="{{id}}">No me gusta</button>
                    <span class="no-me-gusta-counter">({{nomegusta}})</span>
                  </div>
                </div>
                <div class="mt-auto">
                  <h5 class="card-title text-center">{{titulo}}</h5>
                </div>
                <div class="text-center text-md-start">
                  <small class="text-muted">Fecha de creaci√≥n: {{fecha_creacion}}</small>
                </div>
                <p class="card-text">{{descripcion}}</p>
                <hr>
                <div class="comentarios">
                  {{#each comentarios}}
                    <div class="comentario">
                      <p>{{texto}}</p>
                      <small class="text-muted">Fecha: {{fecha_creacion}}</small>
                    </div>
                  {{/each}}
                </div>
                <hr>
                <form>
                  <div class="mb-3">
                    <label for="nuevo-comentario" class="form-label">Escribir comentario:</label>
                    <textarea class="form-control" id="nuevo-comentario" rows="3"></textarea>
                  </div>
                  <button type="submit" class="btn btn-primary">Enviar comentario</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/lightgallery.js/dist/js/lightgallery.min.js"></script>
<script>
  lightGallery(document.getElementById('gallery'), {
    selector: '.gallery-item',
    download: false
  });
</script>
